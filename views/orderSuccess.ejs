<%- include('layouts/header'); -%>
<body>
  <%- include('layouts/nav'); -%>
  <section class="w50">
    <div class="formData">
      <%
        if(typeof(errors) != 'undefined'){
          for(var error of errors){
            %>
              <p class="errors"><%= error.msg%></p>
            <%
          }
        }
        if(typeof(total) != 'undefined'){
          %>
          <p id="formResult"></p>
          <h1>Thank you for your order!!</h1>
          <h2>Here are your order details:</h2>
          <table>
            <tr>
              <th>Name : </th>
              <td><%= customerName %></td>
            </tr>
              <th>Customer Number : </th>
              <td><%= customerNumber %></td>
            </tr>
              <th>Chocolate Blizzards : </th>
              <td><%= blizzards %></td>
            </tr>
            <th>Strawberry Sundaes : </th>
              <td><%= sundaes %></td>
            </tr>
            <th>Blueberry Shakes : </th>
              <td><%= shakes %></td>
            </tr>
            <tr>
              <th>Subtotal : </th>
              <td>$<%= subTotal.toFixed(2) %></td>
            </tr>
            <tr>
              <th>Tax : </th>
              <td>$<%= tax.toFixed(2) %></td>
            </tr>
            <tr>
              <th>Total : </th>
              <td>$<%= total.toFixed(2) %></td>
            </tr>
          </table>
          <%
        }
      %>
      
    </div>
  </section>
  <div class="clear"></div>
</body>
<%- include('layouts/footer'); -%>